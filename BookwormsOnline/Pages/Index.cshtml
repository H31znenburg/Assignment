@page
@using Microsoft.AspNetCore.Identity
@using BookwormsOnline.Model
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    @{
        if (SignInManager.IsSignedIn(User))
        {
            var user = await UserManager.GetUserAsync(User);
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                <p>Hi @User.Identity.Name!</p>
                <p>Your firstname is @user.FirstName</p>
                    <p>Your lastname is @user.LastName</p>
                    <p>Your email name is @user.Email</p>
                    <p>Your phone number name is @user.MobileNo</p>
                    <p>Your card number is @user.CreditCardNo</p>
                    <p>Your Billing Address is @user.BillingAddress</p>
                    <p>Your Shipping Address is @user.ShippingAddress</p>
                </li>
            </ul>
        }
    }
</div>
